<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/transpo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:gravity="center_vertical"
        android:contentDescription="@string/string_find_route"
        android:src="@drawable/ic_transportation_bus" />
    <TextView
	    android:id="@+id/text_instruction_1"
	    android:layout_toRightOf="@+id/transpo_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="8dp"
	    android:src="@string/string_take_the"
	    android:singleLine="true" >	        
	</TextView>

</RelativeLayout>
