<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReportIndicentActivity"
    android:id="@+id/relativeLayout" >

    <ImageButton
        android:id="@+id/collision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/heavyTraffic"
        android:clickable="true"
        android:visibility="gone"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/flooding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/construction"
        android:layout_alignRight="@+id/construction"
        android:layout_below="@+id/construction"
        android:clickable="true"
        android:visibility="gone"
        android:src="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/location"
        android:layout_alignParentTop="true"
        android:text="Current Time" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_toLeftOf="@+id/report"
        android:text="Current Location" />

    <ImageButton
        android:id="@+id/construction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/collision"
        android:layout_below="@+id/location"
        android:layout_marginTop="21dp"
        android:visibility="gone"
        android:clickable="true"
        android:background="@drawable/demobutton" />

    <ImageButton
        android:id="@+id/heavyTraffic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/flooding"
        android:layout_below="@+id/flooding"
        android:visibility="gone"
        android:clickable="true"
        android:src="@android:drawable/btn_star" />

    <Button
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collision"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:clickable="true"
        android:text="Report" />

</RelativeLayout>