<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ViajeWhite">
    
    <TextView
        android:id="@+id/text_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/ViajeGray"
        android:text="@string/string_user_name"
        android:background="@color/ViajeWhite" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_user"
        android:paddingLeft="8dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/ViajeGray"
        android:text="@string/string_user_email" 
        android:background="@color/ViajeWhite"/>
    
    <ImageView
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/text_email"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/find_route_divider"/>
    
    <Button 
        android:id="@+id/btn_enable_display_incident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/background_box_selector"
        android:clickable="true"
        android:text="Display Incidents on Map"
        android:textSize="19sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/ViajeGray"/>
    
    <CheckBox
        android:id="@+id/check_display_incident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_enable_display_incident"
        android:layout_below="@+id/divider1"
        android:clickable="false"
        android:paddingTop="30dp"
        android:paddingRight="16dp"/>
    
    <TextView
        android:id="@+id/btn_enable_display_incident_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_enable_display_incident"
        android:layout_below="@+id/divider1"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="24dp"
        android:paddingTop="32dp"
        android:text="@string/string_setting_display_incident_description"
        android:textColor="@color/ViajeGray"
        android:textSize="12sp" />

        <ImageView
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/btn_enable_display_incident_description"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/find_route_divider"/>
    
    <Button 
        android:id="@+id/btn_OTP_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="24dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/background_box_selector"
        android:clickable="true"
        android:text="Server Used"
        android:textSize="19sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/ViajeGray"/>
    
    <TextView
        android:id="@+id/btn_OTP_server_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_OTP_server"
        android:layout_below="@+id/divider2"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="24dp"
        android:paddingTop="30dp"
        android:text="Current Server address is "
        android:textColor="@color/ViajeGray"
        android:textSize="12sp" />
    
     <ImageView
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/btn_OTP_server_description"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/find_route_divider"/>
     
      <ImageView
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/btn_logout"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/find_route_divider"/>
    

