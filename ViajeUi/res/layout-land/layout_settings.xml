      <Button
          android:id="@+id/clearStats"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/divider3"
          android:background="@drawable/background_box_selector"
          android:clickable="true"
          android:fontFamily="sans-serif"
          android:gravity="left|center_vertical"
          android:paddingBottom="16dp"
          android:paddingLeft="24dp"
          android:paddingRight="16dp"
          android:paddingTop="10dp"
          android:text="Clear User statistics"
          android:textColor="@color/ViajeGray"
          android:textSize="19sp" />

      <ImageView
          android:id="@+id/ImageView01"
          android:layout_width="match_parent"
          android:layout_height="3dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:paddingLeft="2dp"
          android:paddingRight="2dp"
          android:src="@drawable/find_route_divider" />

      <Button
          android:id="@+id/btn_logout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/clearStats"
          android:background="@drawable/background_box_selector"
          android:clickable="true"
          android:fontFamily="sans-serif"
          android:gravity="left|center_vertical"
          android:paddingBottom="16dp"
          android:paddingLeft="24dp"
          android:paddingRight="16dp"
          android:paddingTop="10dp"
          android:text="Log Out"
          android:textColor="@color/ViajeGray"
          android:textSize="19sp" />
 
</RelativeLayout>
